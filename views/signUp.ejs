<body>
    <div class="form w-50 d-block mx-auto">
        <h2 class="text-success text-center ">Sign Up Page</h2>
        <div class="d-block mx-auto">
            <% if (message!="") { %>
                <div id="messages" class="text-center alert alert-danger"><%= message %></div>
            <% } %>
        </div>
        <form action="/student/signup" method="post">            
            <label for="firstName">First Name</label>
            <input type="text" id="firstName" class="form-control my-2" placeholder="First Name" name="firstName">
            <label for="lastName">Last Name</label>
            <input type="text" id="lastName" class="form-control my-2" placeholder="Last Name" name="lastName">
            <label for="email">E-mail</label>
            <input type="text" id="email" class="form-control my-2" placeholder="E-mail" name="email">
            <label for="password">Password</label>
            <input type="text" id="password" class="form-control my-2" placeholder="Password" name="password">
            <button class="w-100 my-2 btn btn-success" type="submit">Sign Up</button>
        </form>
        <!-- <%= message %> -->
    </div>
</body>
</html>